{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "esModuleInterop": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "controllers/authCtrl.js", "routes/authRouter.js", "server.js"],
  "exclude": ["node_modules"]
}
